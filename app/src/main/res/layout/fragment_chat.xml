<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Chat"
    android:id="@+id/frag_chat"
    android:background="#C2D9FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/up_header"
            android:fontFamily="@font/grand_hotel"
            android:paddingVertical="5dp"
            android:text="Chat"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/searchTopic"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight=".9"
                android:layout_height="60dp"
                android:hint="Search..."
                android:paddingVertical="0dp"
                android:layout_marginHorizontal="0dp"
                app:boxStrokeColor="@color/endColor"
                app:boxStrokeWidthFocused="2dp"
                app:counterTextColor="@color/lightBlue2"
                app:boxCornerRadiusBottomEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusTopStart="50dp"
                app:hintTextColor="@color/endColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/searchBtn"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="wrap_content"
                android:src="@drawable/search_ico_small"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="3dp"
                app:tint="@color/startColor" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/chatRecycler"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />


    </LinearLayout>


</FrameLayout>